<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.management.wuye.dao.RepairDao">
    <resultMap id="Repair" type="com.management.wuye.bean.Repair">
        <id column="repairId" property="repairId" jdbcType="INTEGER"></id>
        <result column="repairInfo" property="repairInfo" jdbcType="VARCHAR"></result>
        <result column="devicename" property="devicename" jdbcType="VARCHAR"></result>
        <result column="username" property="username" jdbcType="VARCHAR"></result>
        <result column="houseid" property="houseid" jdbcType="VARCHAR"></result>
        <result column="phone" property="phone" jdbcType="VARCHAR"></result>
        <result column="status" property="status" jdbcType="BOOLEAN"></result>
    </resultMap>

    <select id="getPage" resultMap="Repair">
        select * from p_repair
        <if test="repairInfo != null and repairInfo != ''">
            where repairId like "%${repairInfo}%"
        </if>
        limit #{page}, #{size}
    </select>
    <select id="getCount" resultType="Integer">
        select Count(*) from p_repair
    </select>

    <!-- 查找 -->
    <select id="getRepairById" resultType="int">
	    select p_repair.repairId from p_repair where repairId = #{repairid}
	</select>

    <!-- 添加 -->
    <insert id="addRepair" >
	    insert into
	    p_repair(repairId, repairInfo, devicename, username, houseid, phone, status)
	    values(#{repair.repairId},#{repair.repairInfo},#{repair.devicename}, #{repair.username}, #{repair.houseid}, #{repair.phone}, #{repair.status})
	</insert>

    <!-- 更新操作 -->
    <update id="updateRepair" parameterType="com.management.wuye.bean.Repair">
        update p_repair
        <set>
            <if test="repair.repairInfo!=null and repair.repairInfo!=''">
                repairInfo=#{repair.repairInfo},
            </if>
            <if test="repair.devicename!=null and repair.devicename!=''">
                devicename=#{repair.devicename},
            </if>
            <if test="repair.username!=null and repair.username!=''">
                username=#{repair.username},
            </if>
            <if test="repair.houseid!=null and repair.houseid!=''">
                houseid=#{repair.houseid},
            </if>
            <if test="repair.phone!=null and repair.phone!=''">
                phone=#{repair.phone},
            </if>
            <if test="repair.status!=null and repair.status!=''">
                status=#{repair.status},
            </if>
        </set>
        where repairId=#{repair.repairId}
    </update>
</mapper>